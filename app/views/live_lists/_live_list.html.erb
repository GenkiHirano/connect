<% @live_list = live_list %>
<% @live_companion = LiveCompanion.find(live_list.live_companion_id) %>
<% user = User.find(live_list.from_user_id) %>
<li id="live_list-<%= @live_companion.id %>">
  <div class="live_list-live_companion">
    <p><%= live_list.created_at.strftime("%Y/%m/%d(%a) %H:%M") %> </p>
    <% if live_list.user_id == live_list.from_user_id %>
      <p class="live_list-message">この投稿をライブ予定リストに追加しました。</p>
    <% else %>
      <p class="live_list-message"><%= link_to user.name, user_path(user) %>さんがこのライブに一緒に行きたい！リクエストをしました。</p>
    <% end %>
  </div>
  <div class="row">
    <div class="col-md-2">
      <%= link_to((image_tag @live_companion.picture.url), live_companion_path(@live_companion), class: 'live_companion-picture') %>
    </div>
    <div class="col-md-7">
      <p><%= link_to @live_companion.artist_name, live_companion_path(@live_companion) %></p>
      <p class="live_list-live_companion-live_name"><%= @live_companion.live_name %></p><br>
      <p class="live_list-live_companion-schedule"><%= @live_companion.schedule %></p><br>
      <p class="live_list-live_companion-live_venue"><%= @live_companion.live_venue %></p><br>
      <p class="live_list-live_companion-live_memo"><%= @live_companion.live_memo %></p>
    </div>
    <div class="col-md-3">
      <%= link_to "リストから削除", "/live_lists/#{live_list.id}/destroy",
                             method: :delete,
                             class: "unlive_list",
                             data: { confirm: "本当にリストから削除しますか？" } %>
    </div>
  </div>
</li>