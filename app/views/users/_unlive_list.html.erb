<% live_list = LiveList.find_by(live_companion_id: @live_companion.id) %>
<%= link_to "/live_lists/#{live_list.id}/destroy",
            method: :delete,
            class: 'unlive_list',
            remote: true do %>
  <% if current_user == @live_companion.user %>
    <div class="live_list-btn-unlist"><i class="fas fa-list-alt"></i> ライブ予定リストに追加済み</div>
  <% else %>
    <div class="live_list-btn-unlist"><i class="fas fa-list-alt"></i> 一緒に行きたい！リクエスト済み</div>
  <% end %>
<% end %>
