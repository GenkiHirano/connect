<% provide(:title, "ユーザー登録") %>
<div id="fh5co-portfolio">
  <div class="container">
    <h1>ユーザー登録</h1>
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <%= form_with model: @user, local: true do |f| %>
          <%= render 'shared/error_messages', object: f.object %>
          <div class = 'form-group'>
            <%= f.label :name %>　<span class="input-need">※必須</span>
            <%= f.text_field :name, class: 'form-control', id: 'user_name' %>
          </div>
          <div class = 'form-group'>
            <%= f.label :email %>　<span class="input-need">※必須</span>
            <%= f.email_field :email, class: 'form-control', id: 'user_email' %>
          </div>
          <div class = 'form-group'>
            <%= f.label :password %>　<span class="input-need">※必須</span>
            <%= f.password_field :password, class: 'form-control', id: 'user_password' %>
          </div>
          <div class = 'form-group'>
            <%= f.label :password_confirmation %>　<span class="input-need">※必須</span>
            <%= f.password_field :password_confirmation, class: 'form-control', id: 'user_password_confirmation' %>
          </div>
          <div class = 'form-group'>
            <%= f.label :introduction %>　<span class="input-unneed">※任意</span>
            <%= f.text_area :introduction, size: "60x4", class: 'form-control', id: 'user_introduction' %>
          </div>
          <%= f.submit nil, class: 'btn btn-primary' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
