<%= form_with model: @live_companion, local: true do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <span class="picture">
    <%= f.label :picture %>　<span class="input-unneed">※任意</span>
    <%= f.file_field :picture, accept: 'image/jpeg,image/png', class: 'form-control', id: 'live_companion_picture' %>
  </span>
  <div class = 'form-group'>
    <%= f.label :artist_name %>　<span class="input-need">※必須</span>
    <%= f.text_field :artist_name, class: 'form-control', id: 'artist_name' %>
  </div>
  <div class = 'form-group'>
    <%= f.label :live_name %>　<span class="input-need">※必須</span>
    <%= f.text_field :live_name, class: 'form-control', id: 'live_name' %>
  </div>
    <div class = 'form-group'>
    <%= f.label :schedule %>　<span class="input-need">※必須</span>
    <%= f.date_field :schedule, class: 'form-control', id: 'schedule' %>
  </div>
  <div class = 'form-group'>
    <%= f.label :live_venue %>　<span class="input-need">※必須</span>
    <%= f.text_field :live_venue, class: 'form-control', id: 'live_venue' %>
  </div>
  <div class = 'form-group'>
    <%= f.label :live_memo %>　<span class="input-unneed">※任意</span>
    <%= f.text_field :live_memo, class: 'form-control', id: 'live_memo' %>
  </div>
  <%= f.submit nil, class: 'btn btn-primary' %>
<% end %>

<script type="text/javascript">
  $('#live_companion_picture').bind('change', function() {
    var size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 5) {
      alert('アップロードできる写真の最大サイズは5MBです。5MB以下の画像を選択してください');
    }
  });
</script>
